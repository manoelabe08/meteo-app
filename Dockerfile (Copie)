image: docker:latest

services:
  - docker:dind

stages:
  - build
  - deploy

variables:
  DOCKER_DRIVER: overlay2

before_script:
  - docker login -u "$DOCKER_USER" -p "$DOCKER_PASSWORD"

build-image:
  stage: build
  script:
    - docker build -t $DOCKER_USER/meteo-app:latest .
    - docker push $DOCKER_USER/meteo-app:latest

deploy:
  stage: deploy
  script:
    - echo "Déploiement à faire ici (via SSH ou autre méthode)"

